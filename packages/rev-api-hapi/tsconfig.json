{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "listEmittedFiles": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es5"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/__tests__/*"
    ]
}