{
    // Use IntelliSense to find out which attributes exist for node debugging
    // Use hover for the description of the existing attributes
    // For further information visit https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Unit Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/run-bin",
            "args": ["mocha", "--require", "./tests-setup.js", "--recursive", "src/**/__tests__/*.ts"],
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "sourceMaps": true
        },
        {
            "name": "Debug Current Unit Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/run-bin",
            "args": ["mocha", "--require", "./tests-setup.js", "${relativeFile}"],
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "sourceMaps": true
        },
        {
            "name": "Run Current File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/../../tsnode.js",
            "args": ["${workspaceRoot}/${relativeFile}"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ]
}